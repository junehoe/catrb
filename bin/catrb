#!/usr/bin/env ruby

class Catrb
  def catrb
    if directory_exists?(ARGV[0])
      puts "catrb: #{ARGV[0]} is a directory"
    elsif file_exists?(ARGV[0])
      File.open(ARGV[0]).each do |line|
        puts line
      end
    else
      puts "catrb: #{ARGV[0]}: No such file or directory"
    end
  end

  def directory_exists?(directory)
    File.directory?(directory)
  end

  def file_exists?(file)
    File.exist?(file)
  end
end

Catrb.new.catrb
