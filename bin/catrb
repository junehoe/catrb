#!/usr/bin/env ruby

class Catrb
  def catrb
    ARGV.each do |argument|
      if directory_exists?(argument)
        puts "catrb: #{argument} is a directory"
      elsif file_exists?(argument)
        File.open(argument).each do |line|
          puts line
        end
      else
        puts "catrb: #{argument}: No such file or directory"
      end
    end
  end

  def directory_exists?(directory)
    File.directory?(directory)
  end

  def file_exists?(file)
    File.exist?(file)
  end
end

Catrb.new.catrb
